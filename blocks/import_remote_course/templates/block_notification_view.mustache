<section id="block_import_remote_notification">
    <h4>{{tamplatename}}</h4>
    <button id="newitems">{{newitems}}</button>
    <ul id="newactivitieslist" class="activitylist hidden">
    {{#newmods}}
    <p class="sectionname">{{sectionname}}</p>
        {{#child}}
        <li draggable="true" id="{{cmid}}" class="activityitem">{{# pix }}i/dragdrop, core, movecoursemodule{{/ pix }}{{{iconsrc}}}{{name}}</li>
        {{/child}}
        {{#sub}}
	        <p class="subsectionname">{{name}}</p>
		        {{#child}}
		            <li draggable="true" id="{{cmid}}" class="activityitem">{{# pix }}i/dragdrop, core, movecoursemodule{{/ pix }}{{{iconsrc}}}{{name}}</li>
		        {{/child}}
        {{/sub}}
    {{/newmods}}
    {{#newmodsbutton}}
    <li><button id="resetnew" class="reset" data-toggle="modal" data-target="#newact">{{#str}} resetbutton, block_import_remote_course {{/str}}</button><li>
    {{/newmodsbutton}}
    </ul>
    
    <button id="updateitems">{{updatesstr}}</button>
    <ul id="updatedactivites" class="activitylist hidden">
    {{#updatemods}}
    <p class="sectionname">{{sectionname}}</p>
        {{#child}}
        <li draggable="true" id="{{cmid}}" class="activityitem">{{# pix }}i/dragdrop, core, movecoursemodule{{/ pix }}{{{iconsrc}}}{{name}}</li>
        {{/child}}
    {{/updatemods}}
    {{#updatemodsbutton}}
    <li><button id="resetupdate" class="reset" data-toggle="modal" data-target="#updateact">{{#str}} resetbutton, block_import_remote_course {{/str}}</button><li>
    {{/updatemodsbutton}}
    </ul>
    
    <a id="importsite" target="_blank" href="{{tetstenvurl}}" class="btn">{{# str }} trytemplates, block_import_remote_course {{/ str }}</a>
</section>

<!-- Modal -->
<div id="newact" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{# str }} confirmdelete, block_import_remote_course {{/ str }}</h4>
      </div>
      <div class="modal-body">
        <p>{{# str }} deletewarning, block_import_remote_course {{/ str }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="newconfirmyes" class="btn btn-default" data-dismiss="modal">{{# str }} yes, core {{/ str }}</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">{{# str }} no, core {{/ str }}</button>
      </div>
    </div>
  </div>
</div>

