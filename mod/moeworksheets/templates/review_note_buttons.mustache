<style>
    #note_review_buttons {
        float:left;
    }
    .draftview {
        border-style: solid;
        background: antiquewhite;
        position : fixed;

    }
</style>
{{#js}}
require(['jquery','jqueryui', 'local_notes/notes', 'local_notes/annotation'], function($, jqui, note) {
     // add draggable and resizable for note
    $(document).ready(function(event){
        $(".draftview").resizable({containment: "#draftview"});
        $(".draftview").draggable({cancel: '#id_contenteditable'});
        });
    // hide show note
    $(".showdraft_button").click(function(){
        $('.draftview').toggle();
        });
    // open new tabe
    $("#ahowdrafthistort_button").click(function(){
        window.open('{{link}}', '_blank');
        });    
    var params = {namespace:'{{namespace}}', namespaceid:{{namespaceid}}, content:'{{{content}}}', noteid:'{{noteid}}'};
    note.init(params);     
});
{{/js}}
<div id = "note_review_buttons">
    <button id="ahowdrafthistort_button" type="button">{{# str }} ahowdrafthistort, mod_moeworksheets {{/ str }}</button>
    <button class="showdraft_button" type="button">{{# str }} showdraft, mod_moeworksheets {{/ str }}</button>
</div>
<div class = 'draftview' style = "display:none">
<h2>{{# str }} draftview, mod_moeworksheets {{/ str }}</h2>
    <p>____________________________________________________________</p>
    <section id = 'id_contenteditable'>
        {{{content}}}
    </section>
    <button class="showdraft_button" type="button">{{# str }} close, mod_moeworksheets {{/ str }}</button>
</div>