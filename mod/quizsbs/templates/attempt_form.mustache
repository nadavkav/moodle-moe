<section id="quizsbs" class="row-fluid">
    <nav id="navigation" class="row-fluid">
        <div class="span12">
            {{{navigation}}}
        </div>
    </nav>
    <section id="questions" class="row-fluid">
        <section id="quizsbs_question" class="span6">
        <form action="{{formacttion}}" method="post" enctype="multipart/form-data" accept-charset="utf-8" id="responseform">
            <div>
                {{{slots}}}
                {{{attemptnavigationbuttons}}}
                <input type="hidden" name="attempt" value="{{attempteid}}" />
                <input type="hidden" name="thispage" value="{{page}}" id="followingpage" />
                <input type="hidden" name="nextpage" value="{{nextpage}}" />
                <input type="hidden" name="timeup" value="0" id="timeup" />
                <input type="hidden" name="sesskey" value="{{sesskey}}" />
                <input type="hidden" name="scrollpos" value="" id="scrollpos" />
                <input type="hidden" name="slots" value="{{questionid}}" /> 
            </div>
        </form>
        {{{connectionwarning}}}
        </section>
        <section id="addtional_content" class="span6">
            {{{content}}}
        </section>
    </section>
</section>